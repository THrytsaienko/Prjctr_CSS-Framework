mixin b-header()
	+b.header
		.container
			.header.text-center.py-5
				+e('h1').title.mb-3 Changing the World Through Design
				+e('p').text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in dui mauris.
				+e('button').btn.btn.btn-primary.btn-lg.mr-4(type="button") Learn More
				+e('button').btn.btn.btn-outline-primary.btn-lg(type="button") Learn Less
			hr